{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022", "dom"],

    "module": "es2020",
    "moduleResolution": "node16",

    "strict": true,
    "skipLibCheck": true,

    "isolatedModules": true,
    "importHelpers": true,

    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,

    "types": ["node"]
  }
}
